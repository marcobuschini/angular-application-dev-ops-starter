{
  "name": "adventurers-notebook",
  "version": "0.0.0",
  "main": "main.js",
  "build": {
    "appId": "marcobuschini.test.app",
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "engines": {
    "node": "~22.*",
    "npm": "~10.*"
  },
  "scripts": {
    "postinstall": "npx husky install",
    "ng": "npx ng",
    "start": "npx ng serve",
    "start:electron": "npx ng build --base-href ./ && cp -R config dist/frontend && electron .",
    "start:electron:prod": "npx ng build --prod --base-href ./ && electron .",
    "build": "npx ng build",
    "build:prod": "npx ng build --configuration production",
    "electron:pack": "npx ng build --base-href ./ && electron-builder  --dir",
    "electron:dist": "npx ng build --base-href ./ && electron-builder",
    "test": "npx jest --coverage",
    "test:ci": "npx jest --coverage --coverageReporters lcovonly",
    "lint": "npx ng lint",
    "cy:open": "npx cypress open",
    "cy:run": "npx cypress run",
    "e2e": "npx ng e2e",
    "e2e:ci": "npx start-server-and-test start http://localhost:4200 cy:run",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.9",
    "@angular/common": "^19.2.9",
    "@angular/compiler": "^19.2.9",
    "@angular/core": "^19.2.9",
    "@angular/forms": "^19.2.9",
    "@angular/material": "^19.2.9",
    "@angular/platform-browser": "^19.2.9",
    "@angular/platform-browser-dynamic": "^19.2.9",
    "@angular/router": "^19.2.9",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "ngx-logger": "^5.0.12",
    "ngx-translate-messageformat-compiler": "^7.1.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "19.3.0",
    "@angular-eslint/eslint-plugin": "^19.3.0",
    "@angular-eslint/eslint-plugin-template": "19.3.0",
    "@angular-eslint/schematics": "19.3.0",
    "@angular-eslint/template-parser": "19.3.0",
    "@angular/build": "^19.2.10",
    "@angular/cdk": "^19.2.11",
    "@angular/cli": "^19.2.10",
    "@angular/compiler-cli": "^19.2.9",
    "@angular/language-service": "^19.2.9",
    "@compodoc/compodoc": "^1.1.26",
    "@cypress/webpack-preprocessor": "6.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "8.31.1",
    "@typescript-eslint/parser": "8.31.1",
    "commitizen": "^4.3.1",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html": "^1.5.0",
    "jest-html-reporter": "^4.1.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.5.5",
    "ngx-translate-testing": "^7.0.0",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.1.1",
    "svg-jest": "^1.0.1",
    "ts-jest": "^29.3.2",
    "ts-loader": "9.5.2",
    "ts-node": "~10.9.2",
    "typescript": "^5.2.0",
    "webpack": "^5.91.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npx pretty-quick --staged && ng lint && npm run test",
      "pre-push": "npm run build:prod"
    }
  }
}
